@page
@model CRUD.Pages.PRODUCTOS.IndexModel
@{
}

<br />
<h2>Lista de Productos</h2>
<head>
    @section Scripts {
        <script>
            function confirmDelete() {
                return confirm("¿Estás seguro de que deseas eliminar este producto?");
            }
        </script>
    }
</head>
<a class="btn btn-primary btn-sm" href="/PRODUCTOS/Create">Nuevo Producto</a>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Creado en</th>
            <th>Accion</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listProductos)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>@item.marca</td>
                <td>@item.precio</td>
                <td>@item.stock</td>
                <td>@item.creado</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/PRODUCTOS/Edit?id=@item.id">Editar</a>
                    <a class="btn btn-danger btn-sm" href="/PRODUCTOS/Delete?id=@item.id" onclick="return confirmDelete()">Eliminar</a>

                </td>
            </tr>
            
        }
    </tbody>

</table>